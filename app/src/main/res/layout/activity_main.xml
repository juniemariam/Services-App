<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C4A52">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Icon + Heading in same line -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_launcher_foreground"
                android:contentDescription="Logo"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PDF Download Activity"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please provide list of five SJSU PDFs to download\n* hardcode of files is file! or you can provide full qualified names..."
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingBottom="15dp" />

        <!-- PDF Input Fields -->
        <EditText
            android:id="@+id/pdf1"
            android:hint="PDF1 File Location"
            style="@style/WhiteEditText" />

        <EditText
            android:id="@+id/pdf2"
            android:hint="PDF2 File Location"
            style="@style/WhiteEditText" />

        <EditText
            android:id="@+id/pdf3"
            android:hint="PDF3 File Location"
            style="@style/WhiteEditText" />

        <EditText
            android:id="@+id/pdf4"
            android:hint="PDF4 File Location"
            style="@style/WhiteEditText" />

        <EditText
            android:id="@+id/pdf5"
            android:hint="PDF5 File Location"
            style="@style/WhiteEditText" />

        <Button
            android:id="@+id/startDownloadBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start download"
            android:layout_marginTop="20dp"
            android:background="#FFEB90" />
    </LinearLayout>
</ScrollView>
